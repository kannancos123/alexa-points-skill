{
  "type": "APL",
  "version": "2022.2",
  "theme": "light",
  "styles": {
    "nameText": {
      "values": [
        {
          "fontWeight": "600",
          "color": "#111827"
        }
      ]
    },
    "pointsText": {
      "values": [
        {
          "fontWeight": "700",
          "color": "#1D4ED8"
        }
      ]
    },
    "nameRound": {
      "values": [
        {
          "fontWeight": "600",
          "color": "#111827"
        }
      ]
    },
    "pointsRound": {
      "values": [
        {
          "fontWeight": "700",
          "color": "#1D4ED8"
        }
      ]
    }
  },
  "mainTemplate": {
    "parameters": ["payload"],
    "items": [
      {
        "type": "Container",
        "when": "${@viewportShape == 'round'}",
        "width": "100vw",
        "height": "100vh",
        "alignItems": "center",
        "justifyContent": "center",
        "items": [
          {
            "type": "Frame",
            "width": "100%",
            "height": "100%",
            "backgroundColor": "#F6F7FB",
            "borderRadius": "220dp",
            "paddingLeft": "${@viewportWidth * 0.08}",
            "paddingRight": "${@viewportWidth * 0.08}",
            "paddingTop": "${@viewportHeight * 0.12}",
            "paddingBottom": "${@viewportHeight * 0.12}",
            "items": [
              {
                "type": "Container",
                "direction": "column",
                "alignItems": "center",
                "spacing": "${@viewportHeight * 0.05}",
                "data": "${payload.summary}",
                "items": [
                  {
                    "type": "Text",
                    "text": "${data.name} ${data.display}",
                    "style": "pointsRound",
                    "fontSize": "${max(22, @viewportWidth * 0.07)}",
                    "textAlign": "center",
                    "width": "100%",
                    "maxLines": 1
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "when": "${@viewportShape != 'round'}",
        "width": "100vw",
        "height": "100vh",
        "paddingLeft": "${@viewportWidth * 0.06}",
        "paddingRight": "${@viewportWidth * 0.06}",
        "paddingTop": "${@viewportHeight * 0.08}",
        "paddingBottom": "${@viewportHeight * 0.08}",
        "backgroundColor": "#F2F4FA",
        "items": [
          {
            "type": "Container",
            "direction": "column",
            "alignItems": "center",
            "spacing": "${@viewportHeight * 0.05}",
            "data": "${payload.summary}",
            "items": [
              {
                "type": "Text",
                "text": "${data.name} ${data.display}",
                "style": "pointsText",
                "fontSize": "${min(96, max(40, @viewportWidth * 0.06))}",
                "textAlign": "center",
                "width": "100%",
                "maxLines": 1
              }
            ]
          }
        ]
      }
    ]
  }
}
